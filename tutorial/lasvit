	// scale font size pouze pro body
	function scaleFontSize() {
		var currentFontSize, currentWidth, deltaWidth, fontRange, fontSetting, widthRange;

		fontSetting = {
			defaultSize: 22,
			minSize: 18,
			maxWidth: 1524,
			minWidth: 768
		};

		currentWidth = document.body.clientWidth;
		body = document.getElementsByTagName('body')[0];

		if (currentWidth > fontSetting.minWidth && currentWidth < fontSetting.maxWidth) {
			fontRange = fontSetting.defaultSize - fontSetting.minSize;
			widthRange = fontSetting.maxWidth - fontSetting.minWidth;
			deltaWidth = fontSetting.maxWidth - document.body.clientWidth;
			currentFontSize = fontSetting.defaultSize - (deltaWidth / widthRange) * fontRange;
			body.style.fontSize = currentFontSize + 'px'
		} else if (currentWidth <= fontSetting.minWidth) {
			body.style.fontSize = fontSetting.minSize + 'px'
		} else {
			body.style.fontSize = fontSetting.defaultSize + 'px'
		}
	}

	scaleFontSize();
	window.onresize = function() {
		scaleFontSize();
	}
</script>


